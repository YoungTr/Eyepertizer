<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.setting.AboutActivity">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            tools:src="@mipmap/ic_launcher" />

        <com.eyepetizer.android.ui.common.view.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            app:typeface="fzdb1Typeface" />

        <com.eyepetizer.android.ui.common.view.TypefaceTextView
            android:id="@+id/tvAboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp"
            app:typeface="fzlLTypeface"
            tools:text="版本 1.0.0" />

        <com.eyepetizer.android.ui.common.view.TypefaceTextView
            android:id="@+id/btnEncourage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_check_update_bg"
            android:text="@string/encourage"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <com.eyepetizer.android.ui.common.view.TypefaceTextView
            android:id="@+id/tvThanksTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thanks_to"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            app:typeface="fzlLTypeface" />

        <com.eyepetizer.android.ui.common.view.TypefaceTextView
            android:id="@+id/tvOpenSourceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/open_source_project_list"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:typeface="fzdb1Typeface" />

    </LinearLayout>

</FrameLayout>