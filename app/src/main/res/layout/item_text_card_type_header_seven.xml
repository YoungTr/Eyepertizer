<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:paddingHorizontal="@dimen/listSpaceSize"
    tools:context=".ui.home.discovery.DiscoveryFragment"
    tools:visibility="visible">

    <com.eyepertizer.androidx.widget.TypefaceTextView
        android:id="@+id/tvTitle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="22sp"
        app:typeface="fzdb1Typeface"
        tools:text="开眼专栏" />

    <com.eyepertizer.androidx.widget.TypefaceTextView
        android:id="@+id/tvRightText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTitle7"
        android:layout_toStartOf="@id/ivInto7"
        android:layout_toEndOf="@id/tvTitle7"
        android:gravity="center_vertical|end"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:typeface="fzdb1Typeface"
        tools:text="查看全部" />

    <ImageView
        android:id="@+id/ivInto7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvRightText7"
        android:layout_alignBottom="@id/tvRightText7"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_into_blue_24dp" />

</RelativeLayout>
