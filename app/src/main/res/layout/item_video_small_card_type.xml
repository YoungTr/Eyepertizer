<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/listSpaceSize"
    tools:context=".ui.home.discovery.DiscoveryFragment">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="173dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background" />

    <com.eyepetizer.android.ui.common.view.TypefaceTextView
        android:id="@+id/tvVideoDuration"
        style="@style/Eyepetizer.VideoDurationTextView"
        android:layout_alignEnd="@id/ivPicture"
        android:layout_alignBottom="@id/ivPicture"
        tools:text="01:36" />

    <com.eyepetizer.android.ui.common.view.TypefaceTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPicture"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/ivPicture"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        app:typeface="fzdb1Typeface"
        tools:text="当病毒把人类隔离在家，大自然开始了狂欢" />

    <com.eyepetizer.android.ui.common.view.TypefaceTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_alignBottom="@id/ivPicture"
        android:layout_marginBottom="9dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:typeface="fzlLTypeface"
        tools:text="#动画 / 开眼精选" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@id/ivPicture"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_share_gray_20dp" />

</RelativeLayout>
